<div class="container">
  <h1>New review for <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.select :rating, Review::RATINGS, prompt: "Rate this restaurant", class: "form-control" %>
    <%= f.input :content, class: "form-control" %>
    <%= f.submit "Add this review", class: "btn btn-primary" %>
  <% end %>
  <hr>
  <%= link_to @restaurant.name, restaurant_path(@restaurant), class: "btn btn-warning" %>
  <hr>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-danger" %>
</div>
